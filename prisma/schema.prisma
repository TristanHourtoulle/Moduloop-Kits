generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  USER
  DEV
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  firstName     String?
  lastName      String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  createdProducts Product[] @relation("ProductCreatedBy")
  updatedProducts Product[] @relation("ProductUpdatedBy")
  createdKits     Kit[]     @relation("KitCreatedBy")
  updatedKits     Kit[]     @relation("KitUpdatedBy")
  projects        Project[] @relation("ProjectCreatedBy")
  projectHistoryChanges ProjectHistory[] @relation("ProjectHistoryChangedBy")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  accountId         String  @unique
  providerId        String
  userId            String
  accessToken       String?
  refreshToken      String?
  idToken           String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope             String?
  password          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Product {
  id                    String   @id @default(cuid())
  nom                   String
  reference             String   @unique
  description           String?
  
  // LEGACY FIELDS - Maintenir pour compatibilité pendant la transition
  // Prix d'achat fournisseur (1, 2, 3 ans) - DEPRECATED: utiliser prixAchatAchat* à la place
  prixAchat1An          Float
  prixAchat2Ans         Float?
  prixAchat3Ans         Float?
  
  // Prix unitaire Moduloop (1, 2, 3 ans) - DEPRECATED: utiliser prixUnitaireAchat* à la place
  prixUnitaire1An       Float
  prixUnitaire2Ans      Float?
  prixUnitaire3Ans      Float?
  
  // Prix de vente total Moduloop (1, 2, 3 ans) - DEPRECATED: utiliser prixVenteAchat* à la place
  prixVente1An          Float
  prixVente2Ans         Float?
  prixVente3Ans         Float?
  
  // Impact environnemental - DEPRECATED: utiliser *Achat à la place
  rechauffementClimatique Float?  // kg eq. CO2
  epuisementRessources    Float?  // MJ
  acidification           Float?  // MOL H+
  eutrophisation          Float?  // kg P eq.
  
  // Marge appliquée (coefficient) - DEPRECATED: utiliser margeCoefficientAchat/Location
  margeCoefficient      Float?
  
  // NOUVEAUX CHAMPS - PRIX ACHAT (UN SEUL PRIX, PAS DE PÉRIODES)
  // Prix d'achat fournisseur pour l'ACHAT
  prixAchatAchat          Float?

  // Prix unitaire Moduloop pour l'ACHAT
  prixUnitaireAchat       Float?

  // Prix de vente total Moduloop pour l'ACHAT
  prixVenteAchat          Float?

  // Marge appliquée pour l'ACHAT (coefficient)
  margeCoefficientAchat   Float?

  // DEPRECATED - PRIX ACHAT AVEC PÉRIODES (à supprimer après migration complète)
  prixAchatAchat1An       Float?
  prixAchatAchat2Ans      Float?
  prixAchatAchat3Ans      Float?
  prixUnitaireAchat1An    Float?
  prixUnitaireAchat2Ans   Float?
  prixUnitaireAchat3Ans   Float?
  prixVenteAchat1An       Float?
  prixVenteAchat2Ans      Float?
  prixVenteAchat3Ans      Float?
  
  // NOUVEAUX CHAMPS - PRIX LOCATION
  // Prix d'achat fournisseur pour la LOCATION (1, 2, 3 ans)
  prixAchatLocation1An    Float?
  prixAchatLocation2Ans   Float?
  prixAchatLocation3Ans   Float?
  
  // Prix unitaire Moduloop pour la LOCATION (1, 2, 3 ans)
  prixUnitaireLocation1An Float?
  prixUnitaireLocation2Ans Float?
  prixUnitaireLocation3Ans Float?
  
  // Prix de vente total Moduloop pour la LOCATION (1, 2, 3 ans)
  prixVenteLocation1An    Float?
  prixVenteLocation2Ans   Float?
  prixVenteLocation3Ans   Float?
  
  // Marge appliquée pour la LOCATION (coefficient)
  margeCoefficientLocation Float?
  
  // NOUVEAUX CHAMPS - IMPACT ENVIRONNEMENTAL ACHAT
  rechauffementClimatiqueAchat Float?  // kg eq. CO2
  epuisementRessourcesAchat    Float?  // MJ
  acidificationAchat           Float?  // MOL H+
  eutrophisationAchat          Float?  // kg P eq.
  
  // NOUVEAUX CHAMPS - IMPACT ENVIRONNEMENTAL LOCATION
  rechauffementClimatiqueLocation Float?  // kg eq. CO2
  epuisementRessourcesLocation    Float?  // MJ
  acidificationLocation           Float?  // MOL H+
  eutrophisationLocation          Float?  // kg P eq.
  
  // CHAMPS COMMUNS
  
  // Surface occupée (m²) - optionnel pour les produits, requis pour les kits
  surfaceM2             Float?
  
  // Quantité - optionnel pour les produits, requis pour les kits
  quantite              Int?
  
  // Image (base64)
  image                 String?
  
  // Métadonnées
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  createdById           String
  updatedById           String
  
  // Relations
  createdBy User @relation("ProductCreatedBy", fields: [createdById], references: [id])
  updatedBy User @relation("ProductUpdatedBy", fields: [updatedById], references: [id])
  kitProducts KitProduct[]
  
  @@map("products")
}

model Kit {
  id          String   @id @default(cuid())
  nom         String
  style       String
  description String?
  surfaceM2   Float?   // Surface totale occupée par le kit en m²

  // Métadonnées
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  updatedById String

  // Relations
  createdBy     User         @relation("KitCreatedBy", fields: [createdById], references: [id])
  updatedBy     User         @relation("KitUpdatedBy", fields: [updatedById], references: [id])
  kitProducts   KitProduct[]
  projectKits   ProjectKit[]
  
  @@map("kits")
}

model KitProduct {
  id        String @id @default(cuid())
  kitId     String
  productId String
  quantite  Int
  
  // Relations
  kit     Kit     @relation(fields: [kitId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([kitId, productId])
  @@map("kit_products")
}

model Project {
  id          String   @id @default(cuid())
  nom         String
  description String?
  status      ProjectStatus @default(ACTIF)
  
  // Métadonnées
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  
  // Relations
  createdBy     User         @relation("ProjectCreatedBy", fields: [createdById], references: [id])
  projectKits   ProjectKit[]
  history       ProjectHistory[]
  
  @@map("projects")
}

model ProjectKit {
  id        String @id @default(cuid())
  projectId String
  kitId     String
  quantite  Int
  
  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  kit     Kit     @relation(fields: [kitId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, kitId])
  @@map("project_kits")
}

enum ProjectStatus {
  ACTIF
  TERMINE
  EN_PAUSE
  ARCHIVE
}

enum ProjectChangeType {
  CREATED
  UPDATED
  DELETED
  STATUS_CHANGED
  KIT_ADDED
  KIT_REMOVED
  KIT_QUANTITY_UPDATED
}

model ProjectHistory {
  id              String            @id @default(cuid())
  projectId       String
  changeType      ProjectChangeType
  description     String            // Human-readable description of the change
  changedFields   Json?             // Fields that were changed (for UPDATE events)
  oldValues       Json?             // Previous values
  newValues       Json?             // New values
  metadata        Json?             // Additional context (kit names, quantities, etc.)
  
  // User tracking
  changedById     String
  changedBy       User              @relation("ProjectHistoryChangedBy", fields: [changedById], references: [id])
  
  // Timestamps
  createdAt       DateTime          @default(now())
  
  // Relations
  project         Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId, createdAt])
  @@map("project_history")
}